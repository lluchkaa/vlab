{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@App": ["./src/App"],
      "@assets": ["./src/assets"],
      "@boot": ["./src/boot"],
      "@common": ["./src/common"],
      "@config": ["./src/config"],
      "@constants": ["./src/constants"],
      "@components": ["./src/components"],
      "@hocs": ["./src/hocs"],
      "@hooks": ["./src/hooks"],
      "@pages": ["./src/pages"],
      "@redux": ["./src/redux"],
      "@routes": ["./src/routes"],
      "@services": ["./src/services"],
      "@styles": ["./src/styles"],
      "@typings": ["./src/typings"],

      "@App/*": ["./src/App/*"],
      "@assets/*": ["./src/assets/*"],
      "@boot/*": ["./src/boot/*"],
      "@common/*": ["./src/common/*"],
      "@config/*": ["./src/config/*"],
      "@constants/*": ["./src/constants/*"],
      "@components/*": ["./src/components/*"],
      "@hocs/*": ["./src/hocs/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@pages/*": ["./src/pages/*"],
      "@redux/*": ["./src/redux/*"],
      "@routes/*": ["./src/routes/*"],
      "@services/*": ["./src/services/*"],
      "@styles/*": ["./src/styles/*"],
      "@typings/*": ["./src/typings/*"]
    }
  },
  "include": ["src"]
}
